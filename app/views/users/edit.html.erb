<h1>Edit</h1>

<div><%= form_for @user do |f| %>
  Username:<br> <%= f.text_field :username, placeholder: "Username" %><br>
  Password:<br><%= f.text_field :password, placeholder: "Password"  %><br>
  Email:<br><%= f.text_field :email, placeholder: "Email" %><br>
  <%= f.submit "Submit" %><br>
<% end %>
</div>

<% if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
